#include<iostream>
#include<limits.h>
using namespace std;
int unsum(int arr[],int len)
{
    int sum=0;
    int mm=INT_MAX;
    for(int i=0;i<len;i++)
    {
         sum+=arr[i];
         mm=min(mm,arr[i]);
    }
    int dp[sum+1]={0};
    dp[0]=1;
    for(int i=0;i<len;i++)
    {
         for(int j=sum;j>=arr[i];j--)
         {
              dp[j]=dp[j-arr[i]]?1:dp[j];
         }
    }
    for(int i=mm;i<sum;i++)
    {
         if(dp[i]==0)
            return i;

    }
    return sum+1;

}
int main()
{
   int arr[]={1,2,4};
   int len=sizeof(arr)/sizeof(int);
   int res=unsum(arr,len);
   cout<<res<<endl;
}
