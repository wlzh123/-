    ///hello hi ... >>>>>>>>>>>>>> ... hi hello///
    #include<iostream>
#include<string.h>
using namespace std;
void Rev(char st[],int start ,int ends)
{
    char tmp=0;
    while(start<ends)
    {
     tmp = st[start];
     st[start++]=st[ends];
     st[ends--]=tmp;
    }
}
void Reverse(char chr[],int len)
{
    if(len==0)  return;
    Rev(chr,0,len-1);
    int l=-1;
    int r=-1;
    for(int i=0;i<len;i++)
    {
       if(chr[i]!=' ')
       {
           l= i==0||chr[i-1]==' '?i:l;
           r= i==(len-1)||chr[i+1]==' '?i:r;
       }
       if(r!=-1&&l!=-1)
        {
            Rev(chr,l,r);
            l=-1;
            r=-1;
        }

    }
}
int main()
{
    char str[]="hello hi ...";
    int len =strlen(str);
    cout<<len<<endl;
    Reverse(str,len);
    cout<<str<<endl;
}

    
    
