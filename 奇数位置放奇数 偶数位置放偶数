#include<iostream>
using namespace std;
void SortAjust(int arr[],int len)
{
     int even=0;
     int odd=1;
     while(even<len&&odd<len)
     {
         if((arr[len-1]&1)==0)//每次判断最后一个元素 然后交换
         {
            swap(arr[even],arr[len-1]);
            even+=2;
         }
         else
        {
            swap(arr[odd],arr[len-1]);
            odd+=2;
        }
     }
}
int main()
{
    int arr[]={0,1,2,3,4,5};
    int len =sizeof(arr)/sizeof(int);
    SortAjust(arr,len);
    for(int i=0;i<len;i++)
        cout<<arr[i]<<" ";
    return 0;
}
