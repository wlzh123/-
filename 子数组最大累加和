#include<iostream>

using namespace std;
int Sum(int arr[],int len)
{
    int r=-99999;
    int cur=0;
    for(int i=0;i<len;i++)
    {
        cur+=arr[i ];
        r=max(r,cur);
        if(cur<0) cur=0;
    }
    return r;
}
int main()
{
    int arr[]={1,2,-8,3,4,5,6,7,8};
    int len =sizeof(arr)/sizeof(int);
    int res=Sum(arr,len);
    cout<<"子数组最大累加和："<<res<<endl;
    return 0;
}
